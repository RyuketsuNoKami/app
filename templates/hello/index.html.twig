{# extends 'base.html.twig' #}

<html>
    <head>
    <meta charset="UTF-8">
    <title>My Application</title>
    </head>

    <style>
    .example1 { margin: 1em auto; max-width:400px; width: 95%; font: 28px/1.5 sans-serif; 
     background: #66d9ff; padding: 2px 6px; }
    </style>

    <style>
    .example2 { margin: 15em auto; max-width:400px; width: 95%; font: 28px/1.5 sans-serif; 
     background: #66d9ff; padding: 2px 6px; }
    </style>

    <body class="example1">

    
        <ul>
            {% for t in table %}
                <li> 
                    {{t.id}}
                    {{t.title}}
                 </li>
        
            {% endfor %}
        </ul>

        <div class="navigation">
            {{ knp_pagination_render(table) }}
        </div>
    
    </body>

    <body class="example2">

        <ul>
            {% for t in table %}
                {% if t.id >2 %}
                    <li> 
                        {{t.id}}
                        {{t.title}}
                    </li>
                {% endif %}
            {% endfor %}
        </ul>

        <div class="navigation">
            {{ knp_pagination_render(table) }}
        </div>
    
    </body>
</html>
